<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CardClicked">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#2B2B2B">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:orientation="horizontal"
        android:background="#2B2B2B">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="vertical"
                android:layout_marginTop="10dp">

                <ImageView
                    android:id="@+id/cardview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:gravity="center"
                        android:text="이름"
                        android:textSize="10pt"
                        android:textColor="#ffffff"/>

                    <TextView
                        android:id="@+id/inp_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="9"
                        android:text="이름"
                        android:textSize="10pt"
                        android:textColor="#AEAEAE"
                        android:textColorHint="#AEAEAE"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:id="@+id/company"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:gravity="center"
                        android:text="회사명"
                        android:textSize="10pt"
                        android:textColor="#ffffff"/>

                    <TextView
                        android:id="@+id/inp_company"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="9"
                        android:text="회사"
                        android:textSize="10pt"
                        android:textColor="#AEAEAE"
                        android:textColorHint="#AEAEAE"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:id="@+id/team"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:gravity="center"
                        android:text="팀명"
                        android:textSize="10pt"
                        android:textColor="#ffffff"/>

                    <TextView
                        android:id="@+id/inp_team"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="9"
                        android:text="팀명"
                        android:textSize="10pt"
                        android:textColor="#AEAEAE"
                        android:textColorHint="#AEAEAE"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:id="@+id/position"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:gravity="center"
                        android:text="직책"
                        android:textSize="10pt"
                        android:textColor="#ffffff"/>

                    <TextView
                        android:id="@+id/inp_position"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="9"
                        android:text="직책"
                        android:textSize="10pt"
                        android:textColor="#AEAEAE"
                        android:textColorHint="#AEAEAE"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:id="@+id/coNumber"
                        android:layout_width="7dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:gravity="center"
                        android:text="회사번호"
                        android:textColor="#ffffff"
                        android:textSize="10pt" />

                    <TextView
                        android:id="@+id/inp_conumber"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="8"
                        android:text="회사번호"
                        android:textSize="10pt"
                        android:textColor="#AEAEAE"
                        android:textColorHint="#AEAEAE"/>

                    <ImageView
                        android:id="@+id/call_conumber"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:background="@drawable/baseline_call_white_18dp"
                        android:layout_marginLeft="15dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:id="@+id/phone"
                        android:layout_width="10dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:gravity="center"
                        android:text="전화번호"
                        android:textColor="#ffffff"
                        android:textSize="10pt" />

                    <TextView
                        android:id="@+id/inp_pnumber"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="7"
                        android:text="전화번호"
                        android:textSize="10pt"
                        android:textColor="#AEAEAE"
                        android:textColorHint="#AEAEAE"/>

                    <ImageView
                        android:id="@+id/call_pnumber"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:background="@drawable/baseline_call_white_18dp"
                        android:layout_marginRight="15dp"/>

                    <ImageView
                        android:id="@+id/message_pnumber"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:background="@drawable/baseline_chat_white_18dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:id="@+id/mail"
                        android:layout_width="16dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:gravity="center"
                        android:text="이메일"
                        android:textColor="#ffffff"
                        android:textSize="10pt" />

                    <TextView
                        android:id="@+id/inp_email"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="9"
                        android:text="이메일"
                        android:textColor="#AEAEAE"
                        android:textColorHint="#AEAEAE"
                        android:textSize="10pt" />

                    <ImageView
                        android:id="@+id/send_email"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:background="@drawable/baseline_email_white_18dp"
                        android:layout_marginLeft="15dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:id="@+id/fax"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:gravity="center"
                        android:text="팩스번호"
                        android:textSize="10pt"
                        android:textColor="#ffffff"/>

                    <TextView
                        android:id="@+id/inp_fnumber"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="9"
                        android:text="팩스번호"
                        android:textSize="10pt"
                        android:textColor="#AEAEAE"
                        android:textColorHint="#AEAEAE"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:id="@+id/address"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:gravity="center"
                        android:text="주소"
                        android:textSize="10pt"
                        android:textColor="#ffffff"/>

                    <TextView
                        android:id="@+id/inp_address"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="9"
                        android:text="주소"
                        android:textSize="10pt"
                        android:textColor="#AEAEAE"
                        android:textColorHint="#AEAEAE"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/mapTextLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <TextView
                    android:id="@+id/mapText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="mapText"
                    android:textColor="#FFFFFF"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:textSize="20dp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/mapLayout"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:orientation="vertical"
                android:layout_marginBottom="20dp">

                <fragment
                    android:id="@+id/map"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    class="com.google.android.gms.maps.MapFragment"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="메모"
                    android:textColor="#FFFFFF"
                    android:textSize="10pt"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="10dp"/>

                <TextView
                    android:id="@+id/inp_memo"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:text="입력된 메모가 없습니다."
                    android:textSize="10pt"
                    android:textColor="#AEAEAE"
                    android:background="@drawable/custom_edittext"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_margin="5dp"
            android:background="#2B2B2B">

            <Button
                android:id="@+id/btn_modify"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="수정"
                android:textSize="24dp"
                android:textColor="#ffffff"
                android:layout_margin="5dp"
                android:background="@drawable/custon_button_ver_9"/>

            <Button
                android:id="@+id/btn_delete"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="삭제"
                android:textSize="24dp"
                android:textColor="#ffffff"
                android:layout_margin="5dp"
                android:background="@drawable/custon_button_ver_9" />

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="취소"
                android:textSize="24dp"
                android:textColor="#ffffff"
                android:layout_margin="5dp"
                android:background="@drawable/custon_button_ver_9"/>

        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>