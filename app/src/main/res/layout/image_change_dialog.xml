<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="사진 등록 "
        android:fontFamily="@font/baeminjua"
        android:gravity="center"
        android:textColor="#ffffff"
        android:background="#2B2B2B"
        android:textSize="30dp"
        android:layout_margin="5dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_camara"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:background="@drawable/baseline_add_a_photo_black_48dp" />

        <ImageView
            android:id="@+id/img_gallery"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:background="@drawable/baseline_add_photo_alternate_black_48dp"/>

        <ImageView
            android:id="@+id/img_delete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:background="@drawable/baseline_delete_black_48dp"/>

    </LinearLayout>
    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="취소"
        android:fontFamily="@font/baeminjua"
        android:textSize="20dp"
        android:layout_margin="5dp"
        android:textColor="#ffffff"
        android:background="@drawable/custon_button_ver_9"/>

</LinearLayout>